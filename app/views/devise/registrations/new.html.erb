<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control', autofocus: true, placeholder: 'Name' %>
      </div>

      <div class="form-group">
        <%= f.label :username %>
        <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
      </div>

      <div class="form-group">
        <%= f.label :gender %>
        <%= f.select :gender, User::GENDER_TYPES, class: 'form-control', placeholder: 'Gender' %>
      </div>

      <div class="form-group">
        <%= f.label 'Date of Birth' %><br>
        <%= f.date_select :dob, class: 'form-control', start_year: 1900, end_year: Date.today.year %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <%= f.hidden_field :role, value: 'guest' %>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>