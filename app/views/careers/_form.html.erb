<% if current_user.role == 'admin' %>
  <div class="row">
    <div class="col-md-6 col-md-offset-2">
      <%= form_for(@career) do |f| %>

        <div class="form-group">
          <%= f.label :position %>
          <%= f.text_field :position, class: 'form-control', placeholder: 'Position' %>
        </div>

        <div class="form-group">
          <%= f.label :location %>
          <%= f.text_field :location, class: 'form-control', placeholder: 'Location' %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: 8, style: 'resize: none;', class: 'form-control', placeholder: 'Description' %>
        </div>

        <%= f.hidden_field :user_id, value: current_user.id %>

        <%= f.submit 'Create Job', class: 'btn btn-primary btn-block' %>
        <% end %>
    </div>
  </div>
<% end %>
